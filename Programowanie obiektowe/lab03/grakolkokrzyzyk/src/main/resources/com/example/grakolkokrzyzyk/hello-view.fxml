<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="599.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.grakolkokrzyzyk.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="welcomeText" alignment="CENTER" contentDisplay="CENTER" prefHeight="42.0" prefWidth="324.0" text="Kółko i krzyżyk" />
    <GridPane fx:id="gridPane" prefHeight="252.0" prefWidth="424.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Button fx:id="button00" mnemonicParsing="false" prefHeight="100.0" prefWidth="197.0" />
            <Button fx:id="button01" mnemonicParsing="false" prefHeight="100.0" prefWidth="192.0" GridPane.columnIndex="1" />
            <Button fx:id="button02" mnemonicParsing="false" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2" />
            <Button fx:id="button10" mnemonicParsing="false" prefHeight="100.0" prefWidth="266.0" GridPane.rowIndex="1" />
            <Button fx:id="button11" mnemonicParsing="false" prefHeight="100.0" prefWidth="211.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="button12" mnemonicParsing="false" prefHeight="100.0" prefWidth="206.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button fx:id="button20" mnemonicParsing="false" prefHeight="100.0" prefWidth="217.0" GridPane.rowIndex="2" />
            <Button fx:id="button21" mnemonicParsing="false" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button fx:id="button22" mnemonicParsing="false" prefHeight="100.0" prefWidth="217.0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        </children>
    </GridPane>
    <!-- Dodany przycisk restartu -->
    <Button text="Restart" onAction="#resetGame" prefHeight="58.0" prefWidth="261.0" />
</VBox>